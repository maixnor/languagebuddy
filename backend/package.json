{
  "name": "languagebuddy-backend",
  "version": "0.1.0",
  "description": "Language Buddy Backend",
  "main": "dist/main.js",
  "scripts": {
    "build": "node --max-old-space-size=512 node_modules/typescript/bin/tsc",
    "build:watch": "node --max-old-space-size=512 node_modules/typescript/bin/tsc --watch",
    "build:low-mem": "node --max-old-space-size=256 node_modules/typescript/bin/tsc --incremental",
    "build:swc": "swc src -d dist --copy-files",
    "build:swc-watch": "swc src -d dist --copy-files --watch",
    "type-check": "tsc --noEmit",
    "build:full": "npm run type-check && npm run build:swc",
    "start": "node dist/main.js",
    "start:cli": "USE_LOCAL_CLI_ENDPOINT=http://localhost:3333/cli-response node dist/main.js",
    "dev": "node --max-old-space-size=512 node_modules/typescript/bin/tsc -w & nodemon dist/main.js",
    "dev:swc": "swc src -d dist --copy-files --watch & nodemon dist/main.js",
    "dev:cli": "swc src -d dist --copy-files --watch & USE_LOCAL_CLI_ENDPOINT=http://localhost:3333/cli-response nodemon dist/main.js",
    "cli": "node ../cli/chat-cli.js",
    "lint": "eslint . --ext .ts",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "node --test --experimental-test-coverage --require tsx/cjs tests/**/*.test.ts",
    "test:e2e": "RUN_E2E_TESTS=true node --test --require tsx/cjs tests/**/*.e2e.test.ts --timeout 120000"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@langchain/core": "^0.3.57",
    "@langchain/langgraph": "^0.2.74",
    "@langchain/openai": "^0.5.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ioredis": "^5.6.1",
    "js-yaml": "^4.1.0",
    "luxon": "^3.7.1",
    "node-cron": "^4.1.0",
    "openai": "^4.73.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "serve-static": "^1.15.0",
    "stripe": "^18.1.1",
    "whatsapp-cloud-api-express": "^3.1.0",
    "zod": "^3.25.45"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@testcontainers/redis": "^11.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.12.12",
    "@types/serve-static": "^1.15.7",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.0",
    "testcontainers": "^11.0.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5"
  }
}
