{
  "name": "languagebuddy-backend",
  "version": "0.1.0",
  "description": "Language Buddy Backend",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/main.js",
    "dev": "tsc -w & nodemon dist/src/main.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@azure/monitor-opentelemetry": "^1.11.0",
    "@azure/opentelemetry-instrumentation-azure-sdk": "^1.0.0-beta.8",
    "@langchain/core": "^0.3.57",
    "@langchain/langgraph": "^0.2.74",
    "@langchain/openai": "^0.5.11",
    "applicationinsights": "^3.7.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ioredis": "^5.6.1",
    "js-yaml": "^4.1.0",
    "node-cron": "^4.1.0",
    "openai": "^4.73.0",
    "pino": "^9.7.0",
    "pino-applicationinsights": "^2.1.0",
    "pino-pretty": "^13.0.0",
    "serve-static": "^1.15.0",
    "stripe": "^18.1.1",
    "whatsapp-cloud-api-express": "^3.1.0",
    "zod": "^3.25.45"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.12",
    "@types/serve-static": "^1.15.7",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*.ts"
    ]
  }
}
