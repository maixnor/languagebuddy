{
  "name": "languagebuddy-backend",
  "version": "0.1.1",
  "description": "Language Buddy Backend",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "npx swc src --out-dir dist",
    "build:swc": "npx swc src --out-dir dist",
    "generate-build-info": "node scripts/generate-build-info.js",
    "prebuild": "npm run generate-build-info",
    "prebuild:swc": "npm run generate-build-info",
    "predev": "npm run generate-build-info",
    "build-watch": "npx swc src --out-dir dist --watch",
    "type-check": "tsc --noEmit",
    "build:full": "npm run build:swc",
    "start": "node dist/src/main.js",
    "start:cli": "PORT=8080 USE_LOCAL_CLI_ENDPOINT=http://localhost:3333/cli-response node dist/src/main.js",
    "dev": "npx swc src --out-dir dist --watch & ENVIRONMENT=development npx nodemon dist/src/main.js",
    "dev:cli": "npx swc src --out-dir dist --watch & PORT=8080 ENVIRONMENT=development USE_LOCAL_CLI_ENDPOINT=http://localhost:3333/cli-response npx nodemon dist/src/main.js",
    "cli": "node ../cli/chat-cli.js",
    "lint": "eslint . --ext .ts",
    "test": "LOG_LEVEL=error npx jest",
    "test:unit": "LOG_LEVEL=error npx jest src/features/*/*.unit.test.ts",
    "test:int": "LOG_LEVEL=error npx jest src/features/*/*.int.test.ts",
    "test:watch": "LOG_LEVEL=error npx jest src/features/*/*.unit.test.ts --watch",
    "test:coverage": "LOG_LEVEL=error npx jest --coverage",
    "test:e2e": "LOG_LEVEL=error RUN_E2E_TESTS=true npx jest --config jest.e2e.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@langchain/core": "^1.1.0",
    "@langchain/langgraph": "^1.0.2",
    "@langchain/openai": "^1.1.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.206.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "better-sqlite3": "^12.5.0",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jest-mock-extended": "^4.0.0",
    "js-yaml": "^4.1.0",
    "luxon": "^3.7.1",
    "node-cron": "^4.1.0",
    "openai": "^4.73.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "stripe": "^18.1.1",
    "whatsapp-cloud-api-express": "^3.1.0",
    "zod": "^3.25.45"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@swc/jest": "^0.2.39",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.0",
    "testcontainers": "^11.0.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5"
  }
}
