run:
  npm run build && npm run start

test:
  npm run build && npm run test

stream-logs instance:
  ssh wb.maixnor.com 'journalctl -u languagebuddy-api-{{instance}}.service -n 50 -f' | grep --line-buffered "msg\":\"" | sed -u -n "s/.*\"msg\":\"\([^\"]*\)\".*/\1/p"

deploy-prod:
  cd .. && just deploy-backend-prod

deploy-test:
  cd .. && just deploy-backend-test

db-clean:
  @echo "Cleaning SQLite database..."
  @rm -f data/languagebuddy.sqlite

db-download:
  @echo "Downloading Test database from server"
  scp wb.maixnor.com:/var/lib/languagebuddy-api-test/test.sqlite data/languagebuddy.sqlite

