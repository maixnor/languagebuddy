# Frontend justfile for LanguageBuddy

# Run development server
dev:
  npm run dev

# Build for production
build:
  npm run build

# Preview production build locally
preview:
  npm run preview

# Build with Nix
build-nix:
  nix build .

# Deploy to production
deploy-prod:
  cd .. && just deploy-frontend-prod


# Clean build artifacts
clean:
  rm -rf dist node_modules result
