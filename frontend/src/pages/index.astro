		            <script is:inline>

		

		                // Scroll Observer for Pop and Shake effects

		

		                document.addEventListener('DOMContentLoaded', () => {

		

		                    const heroBtn = document.getElementById('hero-cta');

		

		                    const fabBtn = document.getElementById('fab-cta');

		

		                    const scrollThreshold = 100; // px

		

		                    let isFabVisible = false;

		

		        

		

		                    // Helper to trigger shake animation

		

		                    const triggerShake = (element) => {

		

		                        if (!element) return;

		

		                        element.classList.remove('shaking'); // Reset

		

		                        void element.offsetWidth; // Force reflow

		

		                        element.classList.add('shaking');

		

		                        

		

		                        // Cleanup after animation

		

		                        setTimeout(() => {

		

		                            element.classList.remove('shaking');

		

		                        }, 800);

		

		                    };

		

		        

		

		                    if (heroBtn && fabBtn) {

		

		                        // Scroll Handler

		

		                        window.addEventListener('scroll', () => {

		

		                            const scrolled = window.scrollY > scrollThreshold;

		

		        

		

		                            if (scrolled && !isFabVisible) {

		

		                                // Switch to FAB

		

		                                heroBtn.classList.add('hero-hidden');

		

		                                fabBtn.classList.add('fab-visible');

		

		                                isFabVisible = true;

		

		                                

		

		                                // Shake FAB shortly after it pops in

		

		                                setTimeout(() => triggerShake(fabBtn), 400);

		

		        

		

		                            } else if (!scrolled && isFabVisible) {

		

		                                // Switch to Hero

		

		                                heroBtn.classList.remove('hero-hidden');

		

		                                fabBtn.classList.remove('fab-visible');

		

		                                isFabVisible = false;

		

		                            }

		

		                        });

		

		        

		

		                        // Periodic Attention Seeker (Every 30s)

		

		                        setInterval(() => {

		

		                            if (isFabVisible) {

		

		                                triggerShake(fabBtn);

		

		                            } else {

		

		                                // Only shake hero if it's not hidden (double check)

		

		                                if (!heroBtn.classList.contains('hero-hidden')) {

		

		                                    triggerShake(heroBtn);

		

		                                }

		

		                            }

		

		                        }, 30000);

		

		                    } else {

		

		                        console.warn('Scroll interaction elements not found:', { heroBtn, fabBtn });

		

		                    }

		

